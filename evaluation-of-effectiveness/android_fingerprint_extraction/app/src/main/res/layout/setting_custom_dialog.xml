<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/setting_dialog">

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connetion Configuration"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_cpu_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CPU IP Config:"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/cpu_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/text_cpu_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CPU Port Config:"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/cpu_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_gpu_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPU IP Config:\t"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/gpu_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_gpu_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPU Port Config:\t"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/gpu_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/setting_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Confirm"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>



    </LinearLayout>
    >


</LinearLayout>
